{
	"name": "thasmo/craft-boilerplate",
	"description": "Craft CMS Boilerplate",
	"keywords": [
		"craft",
		"cms",
		"project"
	],
	"type": "project",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"craftcms/cms": "^5.0.0",
		"nystudio107/craft-vite": "^5.0",
		"somehow-digital/craft-lettermint": "^v1.0.1",
		"vlucas/phpdotenv": "^5.4.0",
		"yiisoft/yii2-redis": "^2.0"
	},
	"require-dev": {
		"craftcms/generator": "^2.0.0",
		"phpstan/phpstan": "^2.1",
		"symplify/easy-coding-standard": "^13.0",
		"vincentlanglet/twig-cs-fixer": "^3.11",
		"yiisoft/yii2-shell": "^2.0.3"
	},
	"config": {
		"allow-plugins": {
			"craftcms/plugin-installer": true,
			"yiisoft/yii2-composer": true
		},
		"sort-packages": true,
		"optimize-autoloader": true,
		"platform": {
			"php": "8.4"
		}
	},
	"scripts": {
		"analyze": "phpstan analyse",
		"lint:php": "vendor/bin/ecs check --ansi",
		"lint:twig": "vendor/bin/twig-cs-fixer lint templates/",
		"fix:php": "vendor/bin/ecs check --ansi --fix",
		"fix:twig": "vendor/bin/twig-cs-fixer fix templates/",
		"post-install-cmd": [
			"composer audit"
		]
	},
	"autoload": {
		"psr-4": {
			"modules\\site\\": "modules/site/"
		}
	}
}
